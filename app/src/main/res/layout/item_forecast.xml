<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data class="ForecastBinding">
        <variable
            name="weather"
            type="com.dvt.weatherapp.data.response.CurrentWeatherResponse" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#012432"
        android:paddingHorizontal="@dimen/spacing_sm">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_week_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Tuesday"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_weather"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toStartOf="@+id/text_temperature"
            app:layout_constraintStart_toEndOf="@+id/text_week_day"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/rain" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:degree="@{weather.main.temperature}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="24Â°" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>